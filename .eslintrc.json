{
  "extends": [
    "graph"
  ],
  "parser": "babel-eslint",
  "env": {
    "jest": true
  },
  "plugins": ["promise"],
  "globals": {
    "render": false,
    "shallow": false,
    "mount": false
  },
  "rules": {
    "react/jsx-props-no-spreading": "off",
    "promise/prefer-await-to-then": "error",
    "no-shadow": ["off"],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true
      }
    ],
    "no-underscore-dangle": [
      "error",
      {
        "allow": [
          "_id"
        ],
        "allowAfterThis": true
      }
    ],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "react/jsx-indent-props": [
      "error",
      "tab"
    ]
  }
}
